<%= form_for([@portfolio, @portfolio_release, @portfolio_issue]) do |f| %>
  <div class="field">
    <%= f.label :issue_link, t('.issue_link') %>
    <%= f.text_field :issue_link %>
  </div>
  <div class="field">
    <%= f.label :pull_request_link, t('.pull_request_link') %>
    <%= f.text_field :pull_request_link %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>