<h1>Portfolio Issues</h1>

<ul>
  <% @portfolio_issues.each do |issue| %>
    <li>
      <%= link_to issue.issue_link, portfolio_portfolio_release_portfolio_issue_path(@portfolio, @portfolio_release, issue) %>
      <%= link_to 'Edit', edit_portfolio_portfolio_release_portfolio_issue_path(@portfolio, @portfolio_release, issue) %>
      <%= link_to 'Delete', portfolio_portfolio_release_portfolio_issue_path(@portfolio, @portfolio_release, issue), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>

<%= link_to 'Back to Portfolio Release', portfolio_portfolio_release_path(@portfolio, @portfolio_release) %>
<%= link_to 'New Portfolio Issue', new_portfolio_portfolio_release_portfolio_issue_path(@portfolio, @portfolio_release) %>

