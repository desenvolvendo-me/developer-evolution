<h1><%= t('portfolio_issues.index.title') %></h1>

<ul>
  <% @portfolio_issues.each do |issue| %>
    <li>
      <%= link_to issue.issue_link, portfolio_portfolio_release_portfolio_issue_path(@portfolio, @portfolio_release, issue) %>
      <%= link_to  t('.edit'), edit_portfolio_portfolio_release_portfolio_issue_path(@portfolio, @portfolio_release, issue) %>
      <%= link_to t('.delete'), portfolio_portfolio_release_portfolio_issue_path(@portfolio, @portfolio_release, issue), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>

<%= link_to t('.back to portfolio release'), portfolio_portfolio_release_path(@portfolio, @portfolio_release) %>
<%= link_to t('.new portfolio issue'), new_portfolio_portfolio_release_portfolio_issue_path(@portfolio, @portfolio_release) %>

