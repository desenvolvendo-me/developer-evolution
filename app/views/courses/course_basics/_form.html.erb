<%= form_with model: [@course, course_basic] do |form| %>
  <% if course_basic.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(course_basic.errors.count, "error") %> prohibited this course_basic from being saved:</h2>

      <ul>
        <% @course_basic.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label t('course_basics.view.number_of_course'), style: "display: block" %>
    <%= form.select :number_of_course, [1, 2, 3] %>
  </div>

  <div>
    <%= form.label t('course_basics.view.link_course'), style: "display: block" %>
    <%= form.text_field :link_course %>
  </div>

  <div>
    <%= form.label t('course_basics.view.link_repository'), style: "display: block" %>
    <%= form.text_field :link_repository %>
  </div>

  <div>
    <%= form.label t('course_basics.view.link_certified'), style: "display: block" %>
    <%= form.text_field :link_certified %>
  </div>

  <div>
    <%= form.label t('course_basics.view.avaliation_course'), style: "display: block" %>
    <%= form.select :avaliation_course, options_for_select(1..10) %>
  </div>

  <div>
    <%= form.label t('course_basics.view.avaliation_apprenticeship'), style: "display: block" %>
    <%= form.select :avaliation_apprenticeship, options_for_select(1..10) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
