<%= link_to "Back to micro goals", micro_goals_path %>
<h1>Tasks:</h1>
<hr>
<table>
  <thead>
  <tr>
    <th>Task</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Percentage</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @micro_goal_tasks.each do |task| %>
    <tr>
      <td><%= task.task %></td>
      <td><%= task.start_date %></td>
      <td><%= task.end_date %></td>
      <td><%= task.percentage %></td>
      <td><%= link_to 'Show micro goal for this task', [@micro_goal] %> |</td>
      <td><%= link_to 'Show this task', micro_goal_micro_goal_task_path(task.micro_goal, task) %> |</td>
      <td><%= link_to 'Edit', edit_micro_goal_micro_goal_task_path(task.micro_goal, task) %> |</td>
      <td><%= link_to 'Destroy', micro_goal_micro_goal_task_path(task.micro_goal, task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<hr>

<br>

<%= link_to 'New task', new_micro_goal_micro_goal_task_path(@micro_goal) %>
