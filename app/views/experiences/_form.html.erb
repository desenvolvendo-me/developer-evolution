<%= form_with(model: experience) do |form| %>
  <% if experience.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(experience.errors.count, "error") %> prohibited this experience from being saved:</h2>

      <ul>
        <% experience.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.select :category, options_for_select(Experience::CATEGORY) %>
  </div>

  <div>
    <%= form.select :level, options_for_select(Experience::LEVEL_OPTIONS) %>
  </div>

  <div class="field">
    <%= form.select :week, options_for_select(Experience::WEEK_OPTIONS) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
