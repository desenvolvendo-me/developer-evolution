<hr>
<h1>Tasks:</h1>

<table>
  <thead>
  <tr>
    <th>Task</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Percentage</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.task %></td>
      <td><%= task.start_date %></td>
      <td><%= task.end_date %></td>
      <td><%= task.percentage %></td>
      <td><%= link_to 'Show', task %> |</td>
      <td><%= link_to 'Edit', edit_task_path(task) %> |</td>
      <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<hr>

