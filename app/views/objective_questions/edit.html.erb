<section class="bg-white dark:bg-gray-900 py-8">
  <div class="max-w-2xl px-4 mx-auto">

    <h1 class="mb-6 text-lg font-bold text-gray-900 dark:text-white">
      <%= I18n.t('objective.edit_title') %> <%= @objective.title %>
    </h1>

    <%= render "form", objective_question: @objective_question %>

    <div class="flex items-center space-x-4 mt-4">
      <%= link_to I18n.t('objective.question.show_this_question'), objective_objective_question_path, class: "text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>

      <%= link_to I18n.t('objective.question.back_questions'), objective_objective_questions_path, class: "text-blue-600 inline-flex items-center hover:text-white border border-blue-600 hover:bg-blue-600 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-red-600 dark:focus:ring-blue-900" %>
    </div>

  </div>
</section>
