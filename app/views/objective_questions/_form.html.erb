<%= form_with(model: [@objective, @objective_question]) do |form| %>
  <% if @objective_question.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@objective_question.errors.count, "error") %> prohibited this objective_question from being saved:</h2>

      <ul>
        <% @objective_question.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :type_question, style: "display: block" %>
    <%= form.select :type_question, ObjectiveQuestion::TYPE_QUESTION, prompt: "Select type question" %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.select :description, ObjectiveQuestion::DESCRIPTION, prompt: 'Select question description' %>
  </div>

  <div>
    <%= form.label :answer, style: "display: block" %>
    <%= form.text_field :answer %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
