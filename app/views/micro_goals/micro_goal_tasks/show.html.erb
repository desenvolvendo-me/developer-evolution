<h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
  <%= I18n.t('views.micro_goal_tasks.show.show_this_micro_goal_task') %>: <%= @micro_goal.micro_goal %>
</h1>

  <dl>
    <dt class="mb-4 text-xl font-extrabold leading-none text-gray-900 md:text-2xl dark:text-white"><%= I18n.t('views.micro_goal_tasks.form.task_label') %></dt>
    <dd class="mb-4 font-light text-gray-500 sm:mb-5 dark:text-gray-400"><%= @micro_goal_task.task %></dd>

    <dt class="mb-4 text-xl font-extrabold leading-none text-gray-900 md:text-2xl dark:text-white"><%= I18n.t('views.micro_goal_tasks.form.start_date_label') %></dt>
    <dd class="mb-4 font-light text-gray-500 sm:mb-5 dark:text-gray-400"><%= @micro_goal_task.start_date %></dd>

    <dt class="mb-4 text-xl font-extrabold leading-none text-gray-900 md:text-2xl dark:text-white"><%= I18n.t('views.micro_goal_tasks.form.end_date_label') %></dt>
    <dd class="mb-4 font-light text-gray-500 sm:mb-5 dark:text-gray-400"><%= @micro_goal_task.end_date %></dd>

    <dt class="mb-4 text-xl font-extrabold leading-none text-gray-900 md:text-2xl dark:text-white"><%= I18n.t('views.micro_goal_tasks.form.percentage_label') %></dt>
    <dd class="mb-4 font-light text-gray-500 sm:mb-5 dark:text-gray-400"><%= @micro_goal_task.percentage %></dd>
  </dl>

<div class="flex items-center space-x-4 mt-8">

  <%= link_to edit_micro_goal_micro_goal_task_path, class: "text-white inline-flex items-center bg-yellow-500 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" do %>
    <svg aria-hidden="true" class="mr-1 -ml-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z"></path><path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd"></path></svg>
    <%= I18n.t('views.micro_goal_tasks.show.edit_this_micro_goal_task') %>
  <% end %>

  <%= link_to I18n.t('views.micro_goal_tasks.new.back_to_tasks'), micro_goal_micro_goal_tasks_path(@micro_goal), class: "text-blue-600 inline-flex items-center hover:text-white border border-blue-600 hover:bg-blue-600 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-red-600 dark:focus:ring-blue-900" %>

  <%= button_to [@micro_goal, @micro_goal_task], method: :delete, class: "inline-flex items-center text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-500 dark:hover:bg-red-600 dark:focus:ring-red-900", data: { confirm: t('views.micro_goal_tasks.show.destroy_confirmation') } do %>
    <svg aria-hidden="true" class="w-5 h-5 mr-1.5 -ml-1",  fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>
    <%= I18n.t('views.micro_goal_tasks.show.destroy_this_micro_goal_task_button') %>
  <% end %>
</div>